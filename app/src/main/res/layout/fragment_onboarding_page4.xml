<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.onboarding.OnboardingPage4Fragment">


    <TextView
        android:id="@+id/textView_onboarding_title"
        style="@style/HeadLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding4_title"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_onboarding_description"
        style="@style/body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/onboarding4_description"
        android:textAlignment="center"
        android:textColor="@color/gray3"
        app:layout_constraintEnd_toEndOf="@+id/textView_onboarding_title"
        app:layout_constraintStart_toStartOf="@+id/textView_onboarding_title"
        app:layout_constraintTop_toBottomOf="@+id/textView_onboarding_title" />

    <ImageView
        android:id="@+id/imageView_onboarding"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_onboarding4"
        app:layout_constraintEnd_toEndOf="@+id/textView_onboarding_description"
        app:layout_constraintStart_toStartOf="@+id/textView_onboarding_description"
        app:layout_constraintTop_toBottomOf="@+id/textView_onboarding_description" />

</androidx.constraintlayout.widget.ConstraintLayout>