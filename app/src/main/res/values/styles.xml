<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Font -->
    <style name="HeadLine1">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="HeadLine2">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HeadLine3">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeadLine4">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="HeadLine5">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeadLine6">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubTitle1">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SubTitle2">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubTitle3">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="body1">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="body2">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="body3">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="body4">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="caption1">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="caption2">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Nav">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- tab -->
    <style name="tab">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <!-- NEXT Button -->
    <style name="NextButton" parent="HeadLine5">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:backgroundTint">@drawable/background_button</item>
        <item name="android:paddingVertical">13dp</item>
    </style>

    <!-- 탈퇴 Button -->
    <style name="WithdrawalButton" parent="HeadLine5">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:backgroundTint">@drawable/background_button_withdrawal</item>
        <item name="android:paddingVertical">13dp</item>
    </style>

    <!--멤버십 Button -->
    <style name="MembershipButton" parent="HeadLine3">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:backgroundTint">@drawable/background_button</item>
        <item name="android:paddingVertical">25dp</item>
    </style>

    <!-- dialog check Button -->
    <style name="DialogCheckButton" parent="SubTitle2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/primary_50</item>
        <item name="android:paddingVertical">11dp</item>
    </style>

    <!-- dialog cancel Button -->
    <style name="DialogCancelButton" parent="SubTitle2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/gray7</item>
        <item name="android:paddingVertical">11dp</item>
    </style>

    <!-- 회원가입 입력창 -->
    <style name="SignUpEditText" parent="body2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textColorHint">@color/gray7</item>
        <item name="android:background">@drawable/background_edittext_default</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">18dp</item>
    </style>

    <!-- 이미지 round style -->
    <style name="RoundSector5">
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeBottomRight">5dp</item>
        <item name="cornerSizeBottomLeft">5dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="TopRoundSector10">
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="RoundSector20">
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>