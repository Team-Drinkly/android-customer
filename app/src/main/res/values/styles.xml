<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Font -->
    <style name="HeadLine1">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="HeadLine2">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HeadLine3">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeadLine4">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="HeadLine5">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SubTitle1">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SubTitle2">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="body1">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="body2">
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="body3">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="caption1">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="caption2">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Nav">
        <item name="android:fontFamily">@font/pretendard_semi_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Button -->
    <style name="NextButton" parent="HeadLine3">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:backgroundTint">@drawable/background_button_next</item>
        <item name="android:paddingVertical">13dp</item>
    </style>

    <!-- 회원가입 입력창 -->
    <style name="SignUpEditText" parent="body2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:textColorHint">@color/gray6</item>
        <item name="android:background">@drawable/background_edittext_default</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">18dp</item>
    </style>

    <!-- 이미지 round style - 5dp -->
    <style name="RoundSector5">
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeBottomRight">5dp</item>
        <item name="cornerSizeBottomLeft">5dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>